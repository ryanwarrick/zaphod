{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "settings": {
                "python.pythonPath": "${workspaceFolder}${pathSeparator}venv${pathSeparator}Scripts${pathSeparator}python.exe",
                "python.terminal.activateEnvInCurrentTerminal": true
            },
            "name": "Python: Flask",
            "type": "python",
            "preLaunchTask": "Set ENV and Init DB",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "__init__.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                // "--no-reload"
                "--host=127.0.0.1",
                "--port=8000"
            ],
            "jinja": true,
            "serverReadyAction": {
                "pattern": " \\* Running on http://\\d+.\\d+.\\d.\\d:([0-9]+)/\\s\\(Press CTRL\\+C to quit\\)",
                "uriFormat": "http://127.0.0.1:%s",
                "action": "openExternally"
            }
        }
    ]
}